{
  "compilerOptions": {
    "target": "ES2017", // Puedes mantener ES2017 si es compatible con tu proyecto
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Mantén strict como true para una configuración más estricta
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Puedes cambiar a "node" si prefieres esa resolución
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prod/types/**/*.ts" // Añade esta línea para incluir los tipos en la carpeta prod
  ],
  "exclude": ["node_modules"]
}